    "@types/react-dom": "18.0.4",
    "husky": "8.0.1",
    "lint-staged": "12.4.1",
    "patch-package": "6.4.7",
    "prettier": "2.6.2",
    "tsm": "2.2.1",
    "typescript": "4.6.4",
    "uvu": "0.5.3"
  }
